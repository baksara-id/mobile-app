<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_light"
    tools:context=".ui.soal.pilihan.PilihanFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_deskripsi_soal_pilihan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="48dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Arti dari aksara ini adalah"
            android:textColor="@color/main_300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_aksara_soal_pilihan"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center|top"
            android:text="@string/hancaraka_placeholder"
            android:textColor="@color/main_300"
            android:textSize="96sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/tv_deskripsi_soal_pilihan"
            app:layout_constraintStart_toStartOf="@+id/tv_deskripsi_soal_pilihan"
            app:layout_constraintTop_toBottomOf="@+id/tv_deskripsi_soal_pilihan"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_pilihan1"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/neutral_white"
            android:elevation="12dp"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="0"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Ha"
            android:textAllCaps="false"
            android:textColor="@color/main_300"
            android:textSize="24sp"
            android:visibility="invisible"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_aksara_soal_pilihan"
            app:strokeColor="@color/main_300"
            app:strokeWidth="1dp"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_pilihan2"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/neutral_white"
            android:elevation="12dp"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="0"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Na"
            android:textAllCaps="false"
            android:textColor="@color/main_300"
            android:textSize="24sp"
            android:visibility="invisible"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_pilihan1"
            app:strokeColor="@color/main_300"
            app:strokeWidth="1dp"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_pilihan3"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/neutral_white"
            android:elevation="12dp"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="0"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Ca"
            android:textAllCaps="false"
            android:textColor="@color/main_300"
            android:textSize="24sp"
            android:visibility="invisible"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_pilihan2"
            app:strokeColor="@color/main_300"
            app:strokeWidth="1dp"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_pilihan4"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/neutral_white"
            android:elevation="12dp"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="0"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Ra"
            android:textAllCaps="false"
            android:textColor="@color/main_300"
            android:textSize="24sp"
            android:visibility="invisible"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_pilihan3"
            app:strokeColor="@color/main_300"
            app:strokeWidth="1dp"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
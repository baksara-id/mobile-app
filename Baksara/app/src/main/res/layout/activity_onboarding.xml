<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_onboarding_scene"
    tools:context=".ui.OnBoardingActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/img_menu1"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="64dp"
        app:altSrc="@drawable/img_menu_show"
        app:layout_constraintEnd_toStartOf="@+id/img_menu2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_menu_hide" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/img_menu2"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        app:altSrc="@drawable/img_menu_show"
        app:layout_constraintBottom_toBottomOf="@+id/img_menu1"
        app:layout_constraintEnd_toStartOf="@+id/img_menu3"
        app:layout_constraintStart_toEndOf="@+id/img_menu1"
        app:layout_constraintTop_toTopOf="@+id/img_menu1"
        app:srcCompat="@drawable/img_menu_hide" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/img_menu3"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        app:altSrc="@drawable/img_menu_show"
        app:layout_constraintBottom_toBottomOf="@+id/img_menu2"
        app:layout_constraintEnd_toStartOf="@+id/img_menu4"
        app:layout_constraintStart_toEndOf="@+id/img_menu2"
        app:layout_constraintTop_toTopOf="@+id/img_menu2"
        app:srcCompat="@drawable/img_menu_hide" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/img_menu4"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        app:altSrc="@drawable/img_menu_show"
        app:layout_constraintBottom_toBottomOf="@+id/img_menu3"
        app:layout_constraintEnd_toStartOf="@+id/img_menu5"
        app:layout_constraintStart_toEndOf="@+id/img_menu3"
        app:layout_constraintTop_toTopOf="@+id/img_menu3"
        app:srcCompat="@drawable/img_menu_hide" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/img_menu5"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        app:altSrc="@drawable/img_menu_show"
        app:layout_constraintBottom_toBottomOf="@+id/img_menu4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_menu4"
        app:layout_constraintTop_toTopOf="@+id/img_menu4"
        app:srcCompat="@drawable/img_menu_hide" />

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins"
        android:text="Skip"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/img_menu5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_onboarding1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/img_onboarding1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />


    <TextView
        android:id="@+id/tv_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/title_menu_1"
        android:textAlignment="center"
        android:textColor="@color/main_300"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/img_onboarding1"
        app:layout_constraintStart_toStartOf="@+id/img_onboarding1"
        app:layout_constraintTop_toBottomOf="@+id/img_onboarding1" />

    <TextView
        android:id="@+id/tv_desc_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/desc_menu_1"
        android:textAlignment="center"
        android:textColor="@color/main_100"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_1"
        app:layout_constraintStart_toStartOf="@+id/tv_title_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_1" />

    <ImageView
        android:id="@+id/img_onboarding2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/img_onboarding2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tv_title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/title_menu_2"
        android:textAlignment="center"
        android:textColor="@color/main_300"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/img_onboarding2"
        app:layout_constraintStart_toStartOf="@+id/img_onboarding2"
        app:layout_constraintTop_toBottomOf="@+id/img_onboarding2" />

    <TextView
        android:id="@+id/tv_desc_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/desc_menu_2"
        android:textAlignment="center"
        android:textColor="@color/main_100"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_2"
        app:layout_constraintStart_toStartOf="@+id/tv_title_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_2" />

    <ImageView
        android:id="@+id/img_onboarding3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/img_onboarding3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tv_title_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/title_menu_3"
        android:textAlignment="center"
        android:textColor="@color/main_300"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/img_onboarding3"
        app:layout_constraintStart_toStartOf="@+id/img_onboarding3"
        app:layout_constraintTop_toBottomOf="@+id/img_onboarding3" />

    <TextView
        android:id="@+id/tv_desc_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/desc_menu_3"
        android:textAlignment="center"
        android:textColor="@color/main_100"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_3"
        app:layout_constraintStart_toStartOf="@+id/tv_title_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_3" />

    <ImageView
        android:id="@+id/img_onboarding4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/img_onboarding4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tv_title_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/title_menu_4"
        android:textAlignment="center"
        android:textColor="@color/main_300"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/img_onboarding4"
        app:layout_constraintStart_toStartOf="@+id/img_onboarding4"
        app:layout_constraintTop_toBottomOf="@+id/img_onboarding4" />

    <TextView
        android:id="@+id/tv_desc_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/desc_menu_4"
        android:textAlignment="center"
        android:textColor="@color/main_100"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_4"
        app:layout_constraintStart_toStartOf="@+id/tv_title_4"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_4" />

    <ImageView
        android:id="@+id/img_onboarding5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/img_onboarding5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tv_title_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/title_menu_5"
        android:textAlignment="center"
        android:textColor="@color/main_300"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/img_onboarding5"
        app:layout_constraintStart_toStartOf="@+id/img_onboarding5"
        app:layout_constraintTop_toBottomOf="@+id/img_onboarding5" />

    <TextView
        android:id="@+id/tv_desc_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/desc_menu_5"
        android:textAlignment="center"
        android:textColor="@color/main_100"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_5"
        app:layout_constraintStart_toStartOf="@+id/tv_title_5"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_5" />

    <Button
        android:id="@+id/btn_lanjut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:width="250dp"
        android:backgroundTint="@color/main_300"
        android:fontFamily="@font/poppins_bold"
        android:letterSpacing="0"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Selanjutnya"
        android:textColor="@color/neutral_white"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_mulai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:width="250dp"
        android:backgroundTint="@color/main_300"
        android:fontFamily="@font/poppins_bold"
        android:letterSpacing="0"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Mulai Belajar"
        android:textColor="@color/neutral_white"
        android:textSize="18sp"
        android:visibility="invisible"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.motion.widget.MotionLayout>